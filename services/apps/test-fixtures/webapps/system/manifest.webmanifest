    "126": "/style/icons/system_126.png",
    "142": "/style/icons/system_142.png",
    "189": "/style/icons/system_189.png",
    "284": "/style/icons/system_284.png"
  },
  "activities": {
    "view": {
      "filters": {
        "type": "url",
        "url": {
          "required": true,
          "pattern": "(https?:|data:|rtsp:).{1,16384}",
          "patternFlags": "i"
        }
      }
    }
  },
  "messages": [
    { "alarm": "/index.html" },
    { "bluetooth-opp-transfer-complete": "/index.html" },
    { "bluetooth-opp-update-progress": "/index.html" },
    { "bluetooth-opp-receiving-file-confirmation": "/index.html" },
    { "bluetooth-opp-transfer-start": "/index.html" },
    { "icc-stkcommand": "/index.html" },
    { "cdma-info-rec-received": "/index.html" },
    { "nfc-manager-tech-discovered": "/index.html" },
    { "nfc-manager-tech-lost": "/index.html" },
    { "telephony-call-ended": "/index.html" },
    { "nfc-manager-send-file": "/index.html" },
    { "bluetooth-pairing-request": "/index.html" },
    { "notification": "/index.html" },
    { "sms-received": "/index.html" },
    { "salestracker-register-server": "/index.html" },
    { "bluetooth-pbap-request": "/index.html" },
    { "bluetooth-map-request": "/index.html" }
  ],
  "connections": {
    "spell-dialog": {
      "description": "Communicate between keyboard app and system app",
      "rules": {}
    },
    "keyevent": {
      "description": "Communication with virtual keypad",
      "rules": { }
    },
    "launcher-panel": {
      "description": "Show panels from Launcher",
      "rules": { }
    },
    "mediacomms": {
      "description": "Communication with media apps for now playing info",
      "rules": { }
    },
    "search-results": {
      "description": "Communicate between search results and search app",
      "rules": { }
    },
    "app-metrics": {
      "description": "Communicate between system app metrics and search app",
      "rules": { }
    },
    "ftucomms": {
      "description": "Communicate between communications/ftu and System",
      "rules": { }
    },
    "launchercomms": {
      "description": "Communication between launcher app and system app",
      "rules": {
        "manifestURLs": ["app://launcher.gaiamobile.org/manifest.webmanifest"]
      }
    },
    "bluetoothTransfercomms": {
      "description": "Communication with bluetooth apps for sending files info",
      "rules": { }
    },
    "callscreencomms": {
      "description": "Communication between callscreen app and system app",
      "rules": { }
    },
    "application-data-comms": {
      "description": "Communication between settings app and system app",
      "rules": {
        "manifestURLs": ["app://settings.gaiamobile.org/manifest.webmanifest"]
      }
    },
    "stk": {
        "description": "Communicate between Stk app and System app for SIM Toolkit.",
        "rules": {}
    },
    "fxa-mgmt": {
      "description": "Firefox Accounts management API",
      "rules": {
        "minimumAccessLevel": "certified"
      }
    },
    "systoaster": {
      "description": "ask system to show a toaster",
      "rules": { }
    },
    "messageRead": {
      "description": "IAC channel used for get the unread message",
      "rules": { }
    },
    "FMRadioComms": {
      "handler_path": "/index.html",
      "description": "IAC channel used for get FM Radio status",
      "rules": {
        "manifestURLs": ["app://fm.gaiamobile.org/manifest.webmanifest"]
      }
    },
    "emailcomms": {
      "description": "Communicate between email app and System",
      "rules": {}
    }
  },
  "datastores-owned": {
    "download_store": {
      "access": "readwrite",
      "description": "Stores successful downloads"
    },
    "places": {
      "access": "readwrite",
      "description": "Stores data about browsing history."
    },
    "recent_apps": {
      "access": "readwrite",
      "description": "Stores recently opened apps in the order of launching time."
    },
    "eventlogger_event": {
      "access": "readwrite",
      "description": "Stores eventlogger_event"
    }
  },
  "datastores-access": {
    "bookmarks": {
      "readonly": false,
      "description": "View and modify bookmarks"
    },
    "browser_store": {
      "readonly": false,
      "description": "Stores browser data like pinned sites for references of other apps"
    },
    "calllog": {
      "access": "readonly",
      "description": "accesscall log data store for bluetooth PBAP"
    }
  }
}
